{
  "name": "@verful/scheduler",
  "description": "Easily manage scheduled tasks in AdonisJS",
  "version": "1.6.0",
  "keywords": [
    "adonisjs",
    "scheduler",
    "cron",
    "cronjob"
  ],
  "license": "MIT",
  "author": {
    "name": "Arthur Rezende",
    "email": "arthur-er@protonmail.com"
  },
  "homepage": "https://github.com/verful/adonis-scheduler#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/verful/adonis-scheduler.git"
  },
  "bugs": {
    "url": "https://github.com/verful/adonis-scheduler/issues"
  },
  "engines": {
    "node": ">=18"
  },
  "publishConfig": {
    "access": "public",
    "tag": "latest"
  },
  "main": "./build/providers/scheduler_provider.js",
  "types": "build/adonis-typings/index.d.ts",
  "files": [
    "build/adonis-typings",
    "build/commands",
    "build/providers",
    "build/src",
    "build/templates",
    "build/instructions.md"
  ],
  "scripts": {
    "pretest": "pnpm lint",
    "test": "node --require=@adonisjs/require-ts/build/register bin/test.ts",
    "coverage": "nyc pnpm test",
    "clean": "del-cli build",
    "copyfiles": "copyfiles \"templates/**/*.txt\" \"instructions.md\" build",
    "compile": "pnpm lint && pnpm clean && tsc",
    "build": "pnpm compile && pnpm copyfiles",
    "release": "np --message=\"chore(release): %s\"",
    "version": "pnpm build",
    "prepublishOnly": "pnpm build",
    "lint": "eslint . --ext=.ts",
    "format": "prettier --write ."
  },
  "dependencies": {
    "luxon": "^3.4.2",
    "node-cron": "^3.0.2"
  },
  "devDependencies": {
    "@adonisjs/application": "^5.3.0",
    "@adonisjs/core": "^5.9.0",
    "@adonisjs/fold": "^10.0.0",
    "@adonisjs/require-ts": "^2.0.13",
    "@adonisjs/sink": "^5.4.3",
    "@commitlint/cli": "^18.4.3",
    "@commitlint/config-conventional": "^18.4.3",
    "@istanbuljs/nyc-config-typescript": "^1.0.2",
    "@japa/assert": "^1.4.1",
    "@japa/run-failed-tests": "^1.1.1",
    "@japa/runner": "^2.5.1",
    "@japa/spec-reporter": "^1.3.3",
    "@poppinss/dev-utils": "^2.0.3",
    "@poppinss/utils": "^5.0.0",
    "@semantic-release/git": "^10.0.1",
    "@types/luxon": "^3.3.2",
    "@types/node": "^20.10.5",
    "@types/node-cron": "^3.0.11",
    "@types/sinon": "^17.0.2",
    "copyfiles": "^2.4.1",
    "del-cli": "^5.1.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-adonis": "^2.1.1",
    "eslint-plugin-import-helpers": "^1.3.1",
    "eslint-plugin-prettier": "^5.1.2",
    "eslint-plugin-unicorn": "^50.0.1",
    "execa": "^5.1.1",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "np": "^9.2.0",
    "nyc": "^15.1.0",
    "prettier": "^3.1.1",
    "reflect-metadata": "^0.2.1",
    "semantic-release": "^22.0.12",
    "sinon": "^17.0.1",
    "typescript": "^5.3.3"
  },
  "peerDependencies": {
    "@adonisjs/core": "^5.9.0"
  },
  "adonisjs": {
    "instructionsMd": "./build/instructions.md",
    "preloads": [
      "./start/tasks"
    ],
    "templates": {
      "start": [
        {
          "src": "tasks.txt",
          "dest": "tasks"
        }
      ]
    },
    "types": "@verful/scheduler",
    "providers": [
      "@verful/scheduler"
    ],
    "commands": [
      "@verful/scheduler/build/commands"
    ]
  },
  "eslintConfig": {
    "extends": [
      "plugin:adonis/typescriptApp",
      "plugin:unicorn/recommended",
      "prettier"
    ],
    "plugins": [
      "prettier",
      "eslint-plugin-import-helpers"
    ],
    "rules": {
      "prettier/prettier": "error",
      "import-helpers/order-imports": [
        "warn",
        {
          "newlinesBetween": "always",
          "groups": [
            "/node:(.*)/",
            "module",
            "/@ioc:(.*)/",
            [
              "parent",
              "sibling",
              "index"
            ]
          ],
          "alphabetize": {
            "order": "asc",
            "ignoreCase": true
          }
        }
      ],
      "unicorn/prefer-module": "off",
      "unicorn/prefer-top-level-await": "off",
      "unicorn/text-encoding-identifier-case": "off",
      "unicorn/no-null": "off",
      "unicorn/no-array-reduce": "off",
      "unicorn/prevent-abbreviations": [
        "error",
        {
          "allowList": {
            "env": true
          }
        }
      ],
      "unicorn/filename-case": [
        "error",
        {
          "cases": {
            "snakeCase": true
          }
        }
      ],
      "unicorn/no-array-callback-reference": "off"
    }
  },
  "eslintIgnore": [
    "build"
  ],
  "prettier": {
    "trailingComma": "es5",
    "semi": false,
    "singleQuote": true,
    "useTabs": false,
    "quoteProps": "consistent",
    "bracketSpacing": true,
    "arrowParens": "always",
    "printWidth": 100
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "body-max-line-length": [
        0,
        "always"
      ]
    }
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix"
    ]
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm",
      "@semantic-release/github",
      [
        "@semantic-release/git",
        {
          "assets": [
            "package.json"
          ],
          "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
        }
      ]
    ]
  }
}
